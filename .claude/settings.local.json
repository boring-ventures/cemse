{
  "cleanupPeriodDays": 60,
  "env": {},
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "WebFetch",
      "WebSearch",
      "Edit",
      "Write",
      "MultiEdit",
      "Task",
      "Bash(docker:*)",
      "Bash(grep:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": ["../docs/", "./PRPs/", "./ai_docs/"]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Creating file: ${CLAUDE_TOOL_ARG_PATH}'"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Editing file: ${CLAUDE_TOOL_ARG_PATH}'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Command completed: ${CLAUDE_TOOL_ARG_PATH}'"
          }
        ]
      }
    ]
  }
}
